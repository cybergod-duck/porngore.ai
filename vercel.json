{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/.*",
      "dest": "app.py"
    }
  ],
  "installCommand": "pip install --no-cache-dir -r requirements.txt",
  "buildCommand": "echo 'No build step needed for Streamlit'",
  "outputDirectory": "."
}
